{
  "name": "design-system-boilerplate",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/flexdinesh/design-system-boilerplate "
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "ds:clean": "manypkg run @unpublished/design-system clean",
    "next:clean": "manypkg run @ds-boilerplate/nextjs-example clean",
    "parcel:clean": "manypkg run @ds-boilerplate/parcel-example clean",
    "root:clean": "rimraf --no-glob .parcel-cache tsconfig.tsbuildinfo ./node_modules/.cache",
    "clean": "yarn root:clean && yarn ds:clean && yarn parcel:clean && yarn next:clean",
    "ds:build": "manypkg run @unpublished/design-system clean && manypkg run @unpublished/design-system build",
    "next:dev": "manypkg run @ds-boilerplate/nextjs-example dev",
    "next:build": "manypkg run @ds-boilerplate/nextjs-example build",
    "next:build:static": "manypkg run @ds-boilerplate/nextjs-example build:static",
    "dep:fix": "manypkg fix",
    "dep:check": "manypkg check"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.1",
    "@mdx-js/react": "^2.0.0",
    "@parcel/packager-ts": "^2.3.1",
    "@parcel/transformer-mdx": "2.3.1",
    "@parcel/transformer-typescript-types": "^2.3.1",
    "rimraf": "3.0.2",
    "typescript": "4.5.4"
  },
  "manypkg": {
    "defaultBranch": "main"
  }
}
