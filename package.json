{
  "name": "design-system-boilerplate",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/flexdinesh/design-system-boilerplate "
  },
  "workspaces": [
    "design-system",
    "example-parcel",
    "boilerplate-nextjs"
  ],
  "scripts": {
    "clean": "rimraf ./.parcel-cache '.cache/*'",
    "lint": "yarn workspace design-system lint && yarn workspace boilerplate-nextjs lint && yarn workspace boilerplate-cra lint",
    "typecheck": "yarn workspace website typecheck && yarn workspace api typecheck",
    "next:dev": "yarn workspace boilerplate-nextjs dev",
    "csr:dev": "yarn workspace example-parcel start"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.2.1",
    "@parcel/transformer-typescript-types": "^2.2.1",
    "rimraf": "3.0.2",
    "typescript": ">=3.0.0"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  }
}
