{
    "compilerOptions": {
      "esModuleInterop": false,
      "forceConsistentCasingInFileNames": true,
      "incremental": true,
      "isolatedModules": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmit": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "useUnknownInCatchVariables": true,
    },
    "exclude": ["node_modules", ".yarn", "dist"]
  }